<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vwfsag.fso.persistence.ActivityPageMapper">
	<resultMap id="ResultMap" type="ActivityPage">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="product_id" property="productId" jdbcType="INTEGER" />
		<result column="display_title" property="displayTitle" jdbcType="VARCHAR" />
		<result column="display_imgs" property="displayImgs" jdbcType="VARCHAR" />
		<result column="target_url" property="targetURL" jdbcType="VARCHAR" />
		<result column="layout_type" property="layoutType" jdbcType="INTEGER" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
	</resultMap>
	<sql id="ColumnList">
		id, product_id, display_title, display_imgs, target_url, layout_type, create_time
	</sql>
	<select id="getById" resultMap="ResultMap" parameterType="java.lang.Integer">
		select
		<include refid="ColumnList" />
		from mis_activity_page
		where id = #{id}
	</select>
	<select id="getByType" resultMap="ResultMap" parameterType="java.lang.Integer">
		select
		<include refid="ColumnList" />
		from mis_activity_page
		<if test="layoutType != null">
			where layout_type = #{layoutType}
		</if>
	</select>
	<delete id="deleteById" parameterType="java.lang.Integer">
		delete from mis_activity_page
		where id = #{id}
	</delete>
	<insert id="insert" parameterType="ActivityPage">
		insert into mis_activity_page (id, product_id, display_title,
		display_imgs,
		target_url, layout_type,
		create_time)
		values (#{id}, #{productId}, #{displayTitle},
		#{displayImgs}, #{targetURL},
		#{layoutType},
		#{createTime})
	</insert>
	<update id="updateByIdSelective" parameterType="ActivityPage">
		update mis_activity_page
		<set>
			<if test="productId != null">
				product_id = #{productId},
			</if>
			<if test="displayTitle != null">
				display_title = #{displayTitle},
			</if>
			<if test="displayImgs != null">
				display_imgs = #{displayImgs},
			</if>
			<if test="targetURL != null">
				target_url = #{targetURL},
			</if>
			<if test="layoutType != null">
				layout_type = #{layoutType},
			</if>
			<if test="createTime != null">
				create_time = #{createTime},
			</if>
		</set>
		where id = #{id}
	</update>
	<update id="updateById" parameterType="ActivityPage">
		update mis_activity_page
		set product_id = #{productId},
		display_title =
		#{displayTitle},
		display_imgs = #{displayImgs},
		target_url = #{targetURL},
		layout_type = #{layoutType},
		create_time =
		#{createTime}
		where id = #{id}
	</update>
</mapper>